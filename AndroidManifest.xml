<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chemaclass.calculabase"
    android:versionCode="9"
    android:versionName="2.4" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.chemaclass.calculabase.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chemaclass.calculabase.AboutMeActivity"
            android:label="@string/activity_aboutme" >
        </activity>
        <activity
            android:name="com.chemaclass.calculabase.CalculatorActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
