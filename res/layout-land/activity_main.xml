<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input" />

                <Spinner
                    android:id="@+id/spInput"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/output" />

                <Spinner
                    android:id="@+id/spOutput"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
<!-- Botones Hexadecimales -->
	<LinearLayout 
	    android:id="@+id/layoutBtnHexadecimal"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
	    >
	    <Button 
	        android:id="@+id/btA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A" />
	    <Button 
	        android:id="@+id/btB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B" />
	    <Button 
	        android:id="@+id/btC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C" />
	    <Button 
	        android:id="@+id/btD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D" />
	    <Button 
	        android:id="@+id/btE"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="E" />
	    <Button 
	        android:id="@+id/btF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="F" />
	</LinearLayout>
	<!-- fin botones hexadecimales -->
      <!-- Input -->
    <LinearLayout 
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
	    >
	    <EditText
	        android:id="@+id/etInput"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:hint="@string/input"
	        android:inputType="number" />
	    <Button 
	        android:id="@+id/btCleanInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="C" />
	</LinearLayout>
<!-- Botones invertir y convertir  -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10" >

        <Button
            android:id="@+id/btInvertir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="@string/invertir" />

        <Button
            android:id="@+id/btConvertir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/convertir" />
    </LinearLayout>

        <EditText
            android:id="@+id/etOutput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/output"
            android:inputType="number" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/consola" />

        <EditText
            android:id="@+id/etConsola"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:hint="@string/consola"
            android:inputType="textMultiLine" />
    </LinearLayout>

</ScrollView>